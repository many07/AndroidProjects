<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.manuel.altice.firebaseapp.MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/add_data_button"
        android:layout_width="255dp"
        android:layout_height="46dp"
        android:text="Add Data"/>

    <Button
        android:id="@+id/add_object_button"
        android:layout_width="259dp"
        android:layout_height="49dp"
        android:text="Add Object"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/change_user_name_button"
            android:text="Change User Name"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/change_user_name_editText"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Login"
        android:id="@+id/start_login_button"/>
</LinearLayout>
